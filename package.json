{
	"name": "ip-converter",
	"displayName": "Binary Network Visualizer",
	"version": "0.4.0",
	"description": "Educational tool for visualizing network addresses as color-coded binary patterns",
	"author": "",
	"scripts": {
		"dev": "plasmo dev",
		"build": "plasmo build",
		"package:zip": "pnpm build && plasmo package",
		"package:crx": "pnpm build && bash ./script/package-crx.sh",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write ."
	},
	"packageManager": "pnpm@10.30.1",
	"volta": {
		"node": "24.3.0",
		"pnpm": "10.30.1"
	},
	"dependencies": {
		"@plasmohq/storage": "1.15.0",
		"ip-regex": "5.0.0",
		"plasmo": "0.90.5",
		"react": "19.1.0",
		"react-dom": "19.1.0"
	},
	"manifest": {
		"host_permissions": [
			"https://*/*"
		],
		"permissions": [
			"contextMenus"
		]
	},
	"devDependencies": {
		"@biomejs/biome": "2.4.3",
		"@testing-library/react": "16.3.0",
		"@types/chrome": "0.0.332",
		"@types/node": "24.0.13",
		"@types/react": "19.1.8",
		"@types/react-dom": "19.1.6",
		"@vitest/ui": "3.2.4",
		"jsdom": "26.1.0",
		"typescript": "5.8.3",
		"vitest": "3.2.4"
	}
}
